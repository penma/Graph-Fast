# vim:ft=perl
sub addedge {
	# my ($self, $from, $to, $weight) = @_;
	my $v = $_[0]->{vertices};
	my $v_from = $v->{$_[1]} // $_[0]->addvertex($_[1]);
	my $v_to   = $v->{$_[2]} // $_[0]->addvertex($_[2]);

	my $edge = [ $_[1], $_[2], $_[3] ];

	push(@{$_[0]->{edges}}, $edge);
	push(@{$v_from->[VERT_EDGES]}, $edge);
	push(@{$v_to->[VERT_EDGES]}, $edge);
}
